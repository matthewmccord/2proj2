@page "/admin/appointments/details/{Id:long}"

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>Appointment ID:</th><td>@a.AppointmentId</td></tr>
        <tr><th>Date:</th><td>@a.Date</td></tr>
        <tr><th>Time:</th><td>@a.Time</td></tr>

        <tr><th>Group:</th><td>@a.Group</td></tr>
        <tr><th>Group Size:</th><td>@a.GroupSize</td></tr>
        <tr><th>Email:</th><td>@a.Email</td></tr>
        <tr><th>Phone:</th><td>@a.Phone</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/appointments">Back</NavLink>


@code {
    [Inject]
    public IAppointmentRepository repo { get; set; }

    [Parameter]
    public long Id { get; set; }
    public Models.Appointment a { get; set; }
    protected override void OnParametersSet()
    {
        b = repo.Appointments.FirstOrDefault(x => x.AppointmentId == Id);
    }

    public string EditUrl => $"/admin/appointments/edit/{a.AppointmentId}";
}