@model _2proj2.Models.User


<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form method='POST' asp-action="Update" asp-controller="Appointment">
                <input type="hidden" asp-for="GroupId" class="form-control" readonly>
                <div class="mb-3">
                    <label asp-for="Start" class="form-label">Start</label>
                    <input type="datetime-local" asp-for="Start" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="End" class="form-label">End</label>
                    <input type="datetime-local" asp-for="End" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input type="text" asp-for="Phone" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="GroupSize" class="form-label">Group Size</label>
                    <input type="number" asp-for="GroupSize" class="form-control" min=1 max=15 required>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%">Reserve Appointment</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
